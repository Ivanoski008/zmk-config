&i2c1 {
    status = "okay";

    sda-pin = <17>; /* P0.17 como SDA */
    scl-pin = <20>; /* P0.20 como SCL */

    oled_display: oled_display@3c {
        compatible = "ssd1306";
        reg = <0x3c>; /* Direcci√≥n I2C de la pantalla */
        width = <128>;
        height = <32>;
        reset-gpios = <&gpio0 18 GPIO_ACTIVE_LOW>;

    };
};

